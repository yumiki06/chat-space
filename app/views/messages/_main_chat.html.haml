.main-chat
  .main-chat__group-info
    .left-box
      %h2.left-box__current-group
        = @group.name
      %ul.left-box__member-list
        Member:
        %li.left-box__member-list__member
          - @group.users.each do |user|
            = user.nickname
    .edit-btn
      = link_to edit_group_path(@group.id) do
        .edit-btn__text
          Edit
  .main-chat__message-list
    .messages
      = render @messages
  .main-chat__message-form
    .form-box
      .form-box__input-area
        %input.input-text{placeholder: "type a message"}
        %label.pic-btn
          = icon('far', 'image')
          %input.file-select{type: "file"}
          %span<>
      %input.submit-btn{type: "submit", value: "Send"}